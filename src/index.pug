include ./pug/main

doctype html
html(lang=require("./constants/site.js").lang)
  +head()
  
  body

    //- MAIN NAV - pug/includes/main-nav.pug
    +main-nav('home')

    //- SHOWCASE SLIDER
    section.Showcase
      - const slides = [{heading: "Heading One", button: "Sign Up Now"}, {heading: "Heading Two", button: "Show More", color: "danger", align: "center"}, {heading: "Heading Three", button: "Learn Faster", color: "success", align: "right"}];
      
      //- pug/includes/carousel.pug
      +carousel(slides)

    //- HOME ICON SECTION
    section.Icons.py-5
      - const icons = [{icon: "fas fa-cog fa-3x", header: "Turning Gears"}, {icon: "fas fa-cloud fa-3x", header: "Sending Data"}, {icon: "fas fa-cart-plus fa-3x", header: "Making Money"}];

      //- pug/includes/icons.pug
      +icons(icons)

    //- HOME HEADING
    section.HomeHeading.p-5
      .overlay
        .container
          .row
            .col.pt-5
              h1.mb-2 Are You Ready To Get Started?
              p.d-none.d-md-block Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorum aspernatur impedit aut ab qui, praesentium dolor sequi atque voluptas a.

    //- INFO SECTION
    section.Info.py-3
      .container
        .row
          .col-md-6.align-self-center
            h3.mb-1 Lorem Ipsum
            p.mb-2 Lorem ipsum, dolor sit amet consectetur adipisicing elit. Quibusdam earum tempore quae at ipsam voluptate, sequi eum repudiandae quod voluptatem.
            a.btn.btn-outline-danger.btn-lg(href="about.html") Learn More
          .col-md-6
            img.img-fluid(src=require("./images/laptop.png"))

    //- VIDEO PLAY
    section.Video
      .overlay
        .container
          .row
            .col.p-5
              a.video(data-target="#videoModal", data-toggle="modal", data-video="https://www.youtube.com/embed/5GcQtLDGXy8", href="#")
                i.fas.fa-play.fa-3x
              h1.mt-3 See What We Do ! 
    
    //- VIDEO MODAL
    #videoModal.modal.fade
      .modal-dialog
        .modal-content
          .modal-header
            button.close(data-dismiss="modal")
              span &times;
          .modal-body
            iframe(src="", frameborder="0", height="300", width="100%", allowfullscreen)  

    //- PHOTO GALLERY
    section.Gallery.py-5
      .container
        h1.text-center Photo Gallery
        p.text-center.mb-3 Check out our photos
        .row.mb-4
          for term in ["water", "clouds", "trees"]
            .col-md-4
              a(data-gallery="img-gallery", data-height="560", data-toggle="lightbox", data-width="560", href=`https://source.unsplash.com/560x560/?${term}`)
                img.img-fluid(src=`https://source.unsplash.com/560x560/?${term}`, alt="Unsplash Random") 
        .row.mb-4
          for term in ["mountains", "sand", "animals"]
            .col-md-4
              a(data-gallery="img-gallery", data-height="560", data-toggle="lightbox", data-width="560", href=`https://source.unsplash.com/560x560/?${term}`)
                img.img-fluid(src=`https://source.unsplash.com/560x560/?${term}`, alt="Unsplash Random") 

    //- NEWSLETTER
    section.Newsletter.text-center.p-5.bg-dark.text-white
      .container
        .row
          .col
            h1.mb-1 Sign Up For Our Newsletter
            p.mb-2 Lorem ipsum dolor sit amet consectetur adipisicing elit. Eaque quas itaque quae nisi ullam optio quod commodi molestiae quia veniam!
            form.form-inline.justify-content-center
              input.form-control.form-control-lg.mb-2.mr-2(type="text", placeholder="Enter Name")
              input.form-control.form-control-lg.mb-2.mr-2(type="email", placeholder="Enter Email")
              button.btn.btn-primary.mb-2.btn-lg(type='submit') Submit
    
    //- FOOTER - pug/includes/footer.pug
    +footer
